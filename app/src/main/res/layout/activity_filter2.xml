<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.FilterActivity"
    android:paddingHorizontal="16dp"
    >

    <TextView
        android:id="@+id/filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtros"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:paddingVertical="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        app:layout_constraintTop_toBottomOf="@id/filter_title"
        app:layout_constraintBottom_toTopOf="@id/input_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o nome"
        app:layout_constraintTop_toBottomOf="@id/label_name"
        />

    <TextView
        android:id="@+id/label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        app:layout_constraintTop_toBottomOf="@id/input_name"
        app:layout_constraintBottom_toTopOf="@id/checkbox_alive"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/checkbox_alive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vivo"
        app:layout_constraintTop_toBottomOf="@id/label_status"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/checkbox_dead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morto"
        app:layout_constraintTop_toBottomOf="@id/label_status"
        app:layout_constraintStart_toEndOf="@id/checkbox_alive"
        />

    <CheckBox
        android:id="@+id/checkbox_unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconhecido"
        app:layout_constraintTop_toBottomOf="@id/label_status"
        app:layout_constraintStart_toEndOf="@id/checkbox_dead"
        />

    <TextView
        android:id="@+id/label_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especie"
        app:layout_constraintTop_toBottomOf="@id/checkbox_alive"
        app:layout_constraintBottom_toTopOf="@id/input_species"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/input_species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a especie"
        app:layout_constraintTop_toBottomOf="@id/label_species"
        />

    <TextView
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        app:layout_constraintTop_toBottomOf="@id/input_species"
        app:layout_constraintBottom_toTopOf="@id/input_type"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/input_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o Tipo"
        app:layout_constraintTop_toBottomOf="@id/label_type"
        />

    <TextView
        android:id="@+id/label_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        app:layout_constraintTop_toBottomOf="@id/input_type"
        app:layout_constraintBottom_toTopOf="@id/checkbox_female"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/checkbox_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Femea"
        app:layout_constraintTop_toBottomOf="@id/label_gender"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/checkbox_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macho"
        app:layout_constraintTop_toBottomOf="@id/label_gender"
        app:layout_constraintStart_toEndOf="@id/checkbox_female"
        />

    <CheckBox
        android:id="@+id/checkbox_genderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sem genero"
        app:layout_constraintTop_toBottomOf="@id/label_gender"
        app:layout_constraintStart_toEndOf="@id/checkbox_male"
        />

    <CheckBox
        android:id="@+id/checkbox_gender_unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconhecido"
        app:layout_constraintTop_toBottomOf="@id/label_gender"
        app:layout_constraintStart_toEndOf="@id/checkbox_genderless"
        />

</androidx.constraintlayout.widget.ConstraintLayout>